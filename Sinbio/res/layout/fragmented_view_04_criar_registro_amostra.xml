<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/textView_criar_registro_amostra_galeria_DELIMITER_TITLE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_normal_rounded_top_right_bottom_left"
            android:gravity="center"
            android:text="@string/cadastro_amostra_general_data_DELIMITER_TITLE_SCREEN_FOUR"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="20dp"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:showDividers="middle" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="408dp"
                android:orientation="vertical"
                android:paddingBottom="35dp"
                android:paddingTop="35dp" >

                <GridView
                    android:id="@+id/gridView_registro_amostra_photo_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3" >
                </GridView>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_criar_registro_amostra_galeria_TAKE_PHOTO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_color_green_rounded_full"
                android:gravity="center"
                android:text="Tirar Foto"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>