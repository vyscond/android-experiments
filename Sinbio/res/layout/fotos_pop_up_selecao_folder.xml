<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80ffffff"
    android:orientation="vertical"
    android:padding="25dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="53dp"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_pop_up_selecao_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_no_rounded_green"
            android:gravity="center"
            android:text="@string/fotos_pop_up_selecao_folder_TITLE"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Spinner
            android:id="@+id/spinner_fotos_pop_up_selecao_folder_pastas_disponiveis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp" />
    </LinearLayout>

</RelativeLayout>