<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="museu.goeldi.mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <!--
         Persisti a tela quando mudarmos a orientação da tela :D 
        
        android:configChanges="screenSize|orientation"
    -->

    <application
        android:icon="@drawable/ic_launcher_museu_goeldi_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cadastro.CriarRegistroAmostra"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_cadastro_amostra" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cadastro.EditarRegistroAmostra"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_vizualizar_amostras" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cadastro.SwipeCriarRegistroAmostra"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_swipe_criar_registro_amostra" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cadastro.SimpleSwipeCriarRegistro"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_simple_swipe_criar_registro" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cadastro.NewSimpleSwipeCriarRegistroAmostra"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_new_simple_swipe_criar_registro_amostra" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>