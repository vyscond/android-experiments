<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="museu.goeldi.mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <!--
         Persisti a tela quando mudarmos a orientação da tela :D 
        
        android:configChanges="screenSize|orientation"
    -->

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <application
        android:icon="@drawable/ic_launcher_museu_goeldi_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".screens.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.CriarRegistroAmostra"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_cadastro_amostra" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.EditarRegistroAmostra"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_vizualizar_amostras" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.SwipeCriarRegistroAmostra"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_swipe_criar_registro_amostra" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.SimpleSwipeCriarRegistro"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_simple_swipe_criar_registro" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.NewSimpleSwipeCriarRegistroAmostraistroAmostra"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_new_simple_swipe_criar_registro_amostra" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>