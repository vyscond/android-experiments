<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/LinearLayout_edit_screen"
    >

    <TextView
        android:id="@+id/textView_edit_screen_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shape_color_144d3c_borders_no_rounded"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="RegistroTal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="20dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/button_maintainregister_invoke_photo_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="Fotos" />

        <Button
            android:id="@+id/button_maintainregister_invoke_forms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="Registro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.00"
        android:orientation="vertical" >
        
        <ViewStub
            android:id="@+id/viewStub_maintainregister_photo_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/edit_photo_album" />

        <ViewStub
            android:id="@+id/viewStub_maintainregister_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/edit_form" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/textView_maintainregister_save_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shape_color_144d3c_borders_no_rounded"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="Save All"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="25dp" />

</LinearLayout>